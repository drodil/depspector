{
  "name": "depspector",
  "version": "0.0.9",
  "description": "Dependency Inspector - A security analysis tool for npm packages",
  "main": "index.js",
  "types": "index.d.ts",
  "bin": {
    "depspector": "./bin.js"
  },
  "napi": {
    "binaryName": "depspector",
    "packageName": "@drodil/depspector",
    "targets": [
      "aarch64-apple-darwin",
      "x86_64-apple-darwin",
      "x86_64-unknown-linux-gnu",
      "x86_64-unknown-linux-musl",
      "aarch64-unknown-linux-gnu",
      "x86_64-pc-windows-msvc"
    ]
  },
  "files": [
    "bin.js",
    "index.js",
    "index.d.ts"
  ],
  "scripts": {
    "artifacts": "napi artifacts",
    "build": "napi build --platform --release",
    "build:debug": "napi build --platform",
    "prepublishOnly": "napi prepublish -t npm --no-gh-release",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "format": "cargo fmt",
    "format:check": "cargo fmt -- --check",
    "clippy": "cargo clippy -- -D warnings",
    "cargo:test": "cargo test",
    "cargo:build": "cargo build --release",
    "universal": "napi universal -t npm",
    "version": "napi version",
    "bump-test": "standard-version --dry-run --no-verify --releaseCommitMessageFormat 'v{{currentTag}}'",
    "bump": "standard-version --no-verify --releaseCommitMessageFormat 'v{{currentTag}}'"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@napi-rs/cli": "^3.0.0-alpha.65",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "eslint": "^9.29.0",
    "prettier": "^3.5.3",
    "standard-version": "^9.5.0",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4"
  },
  "optionalDependencies": {
    "@drodil/depspector-darwin-arm64": "0.0.5",
    "@drodil/depspector-darwin-x64": "0.0.5",
    "@drodil/depspector-linux-x64-gnu": "0.0.5",
    "@drodil/depspector-linux-x64-musl": "0.0.5",
    "@drodil/depspector-linux-arm64-gnu": "0.0.5",
    "@drodil/depspector-win32-x64-msvc": "0.0.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/drodil/depspector.git"
  },
  "keywords": [
    "npm",
    "security",
    "dependency",
    "scanner",
    "audit",
    "malware",
    "supply-chain"
  ],
  "author": "Heikki Hellgren (heiccih@gmail.com)",
  "license": "MIT"
}
